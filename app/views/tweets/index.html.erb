<p id="notice"><%= notice %></p>

<div class="test mt-10">Tweets</div>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to 'Show', tweet %></td>
        <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
        <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="flex flex-col space-y-5">
  <div data-scope="scope1"> 
    <div class="aaaa">
      aaaa
    </div>
    <div class="bbbb">
      <div class="cccc">
        bbbb > aaaa
      </div>
    </div>
  </div>
  <div data-scope="scope2"> 
    <div class="aaaa">
      bbbb
    </div>
  </div>
</div>

<br>

<%= link_to 'New Tweet', new_tweet_path %>
